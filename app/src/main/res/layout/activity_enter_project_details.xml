<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EnterProjectDetails">

    <TextView
        android:layout_width="wrap_content"
        android:text="Title : "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/title_text"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="0dp"
        android:maxLines="1"
        android:hint="enter title"
        android:singleLine="true"
        android:id="@+id/entetTitle"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/title_text"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Description :"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/text_description"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/entetTitle"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="enter description"
        android:id="@+id/enter_description"
        app:layout_constraintTop_toBottomOf="@id/text_description"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/enter_description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/text_academic"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:text="Academic year :"
        android:layout_height="wrap_content"/>
    <Spinner
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/enter_description"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/spinner_year"
        app:layout_constraintLeft_toRightOf="@id/text_academic"
        android:layout_height="wrap_content"/>
    <Spinner
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/enter_description"
        android:layout_marginTop="@dimen/_12sdp"
        android:id="@+id/spinner_years"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintLeft_toRightOf="@id/spinner_year"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Catergory :"
        android:id="@+id/spinner_text"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/text_academic"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content"/>
    <Spinner
        android:layout_width="@dimen/_100sdp"
        app:layout_constraintTop_toBottomOf="@id/text_academic"
        android:layout_marginTop="@dimen/_12sdp"
        android:id="@+id/spinner_category"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintLeft_toRightOf="@id/spinner_text"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinner_category"
        android:layout_marginLeft="@dimen/_20sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:id="@+id/team_text"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_18sdp"
        android:text="Add Team Member :"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="@dimen/_30sdp"
        app:layout_constraintLeft_toRightOf="@id/team_text"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/ic_baseline_add_24"
        android:id="@+id/add_details"
        android:layout_marginLeft="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@id/spinner_category"
        android:layout_height="@dimen/_30sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#DFDBDB"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/add_details"
        android:layout_marginLeft="@dimen/_20sdp"
        android:padding="@dimen/_20sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/text_login">

            <EditText
                android:id="@+id/_id_enter_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_22sdp"
                android:background="@null"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/color_cursor"
                android:hint="Enter UserName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/text_login">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_22sdp"
                android:background="@null"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/color_cursor"
                android:hint="Enter SID"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/text_login">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_22sdp"
                android:background="@null"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/color_cursor"
                android:hint="Enter Email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>