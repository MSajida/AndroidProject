<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:id="@+id/layout_click"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/_8sdp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_80sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/download"
                android:scaleType="fitXY"
                android:id="@+id/detailImage"
                android:layout_height="@dimen/_80sdp"/>
            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/_20sdp"
                app:layout_constraintLeft_toRightOf="@id/detailImage"
                android:textSize="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Title"
                android:id="@+id/setTitle"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/setTitle"
                android:layout_marginLeft="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/detailImage"
                android:text="Batch : "
                android:textColor="@color/black"
                android:id="@+id/bacthtext"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/setTitle"
                android:layout_marginLeft="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/bacthtext"
                android:id="@+id/setBatch"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/setTitle"
                android:layout_marginLeft="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/setBatch"
                android:id="@+id/yeartext"
                android:text="Year : "
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/setTitle"
                android:layout_marginLeft="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/yeartext"
                android:id="@+id/setYear"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="@dimen/_80sdp">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:scaleType="fitXY"
                    android:id="@+id/edit_project"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_height="@dimen/_30sdp"/>
                <ImageView
                 android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:src="@drawable/ic_baseline_delete_24"
                    android:scaleType="fitXY"
                    android:id="@+id/delete_project"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_30sdp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>