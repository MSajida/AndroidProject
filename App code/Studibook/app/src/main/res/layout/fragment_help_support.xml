<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#ADD8E6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HelpSupport">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/top_layout"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/photo_layout"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:scaleType="fitXY"
android:src="@drawable/ic_baseline_person_24"
                android:layout_height="@dimen/_45sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:gravity="center |start"
                android:layout_marginLeft="20dp"
                android:text="Dr.Charles Hoot"
                android:layout_height="@dimen/_45sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/photo_layout"
            android:id="@+id/email_layout"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_email_24"
                android:layout_height="@dimen/_45sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:gravity="center |start"
                android:layout_marginLeft="20dp"
                android:text="hoot@nwmissouri.edu"
                android:layout_height="@dimen/_55sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/email_layout"
            android:id="@+id/phone_layout"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_local_phone_24"
                android:layout_height="@dimen/_45sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:gravity="center |start"
                android:layout_marginLeft="20dp"
                android:text="123-354-1234"
                android:layout_height="@dimen/_45sdp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/photos_layout"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_height="@dimen/_45sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:gravity="center |start"
                android:layout_marginLeft="20dp"
                android:text="Sakhamuri Lakshmi Kundana"
                android:layout_height="@dimen/_55sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/photos_layout"
            android:layout_marginTop="10dp"
            android:id="@+id/emails_layout"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_email_24"
                android:layout_height="@dimen/_45sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:gravity="center |start"
                android:layout_marginLeft="20dp"
                android:text="S545248@nwmissouri.edu"
                android:layout_height="@dimen/_55sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/emails_layout"
            android:id="@+id/phones_layout"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_local_phone_24"
                android:layout_height="@dimen/_45sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:gravity="center |start"
                android:layout_marginLeft="20dp"
                android:text="123-354-1234"
                android:layout_height="@dimen/_45sdp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>